@media (max-width: 480px)
  body
    overflow-x hidden
  .redundant-item
    display none

  .catalog__all-item
    width 170px
    height 35px
    margin 0 auto
    display flex
    justify-content center
    align-items center
    font-family "Roboto Regular"
    color #ffffff
    font-size 12px
    border-radius 5px

  .menu
    display none


  .header__logo
    display inline-block
    width 106px
    height 31px

  .burger
    display inline-block
    width 25px
    height 18px
    vertical-align top
    position relative
    z-index 100
    &__line
      background-color: #000000;
      height 2px
      width 25px
      position absolute
      transition 300ms
      &:before, &:after
        transition 300ms
        position absolute
        background-color: #000000;
        content ''
        height 2px
        width 25px

      &:before
        top 7px
      &:after
        top 14px

  .burger_active
    position fixed
    right 30px
    top 35px
  .burger_active .burger__line:before
    opacity 0

  .burger_active .burger__line:after
    transform rotate(90deg)
    background-color white
    top 0px

  .burger_active .burger__line
    background-color white
    transform rotate(45deg)
    top 8px
  .authorization
    display none

  .page-container
    width 100%


  .mobile-menu
    display block
    margin 0
    position fixed
    top 0
    left 0
    right 0
    z-index 99
    height 100vh
    width 100%
    padding-top 30px
    background-image linear-gradient(to bottom, #6db552 0%, #33831f 100%)
    transition 300ms
    &_hidden
      top -100vh
  .mobile-menu .authorization
    display flex
    flex-direction row
    justify-content space-between
    width 160px
  .mobile-menu .menu
    display block
    padding-top 75px
    &__item
      display block
      width 100%
      background-image none
      height 40px
      position relative
      padding 16px 40px
      font-size 12px
      &:hover
        color white
        background-image none
        &::after
          background-color #3e8e27
          opacity 1
          box-shadow 0 1px 0 rgba(255, 255, 255, 0.37)
      &::after
        content ''
        position absolute
        bottom 0
        top auto
        left 0
        width 100%
        height 2px
        box-shadow: 0 1px 0 rgba(255, 255, 255, 0.37)
        background-color #3e8e27
        background-image none
      &_first
        &::before
          content ''
          position absolute
          top 0
          left 0
          width 100%
          height 2px
          box-shadow: 0 1px 0 rgba(255, 255, 255, 0.37)
          background-color #3e8e27


  .mobile__authorization
    display flex
    justify-content flex-start
    align-items center
    margin-bottom 20px
    margin-left 40px

  .mobile__registration
    margin-right 18px
    font-size 12px
    color white
    text-decoration none
    position relative
    &::after
      content ' '
      position absolute
      bottom -2px
      left 3px
      right 3px
      border-bottom 1px dotted white

  .mobile__login
    width 77px
    height 30px
    display flex
    justify-content space-between
    align-items center
    padding 0 8px 0 10px
    border-radius 6px
    background-image none
    background-color white
    &-text
      font-family "Roboto Regular"
      font-size 14px
      line-height 18px
      color #6ab24f;
    &-arrow
      width 19px
      height 16px
      background-repeat no-repeat
      background-size contain
      background-image url("../../res/image/whitearrow.svg")

  .search
    width 100%
  .header__container
    display block
    padding 30px
    margin-top 0
  .header__subcontainer
    display block
  .header__mobile-container
    display flex
    justify-content space-between
    align-items center
    margin-bottom 20px
  .header__menu
    margin-top 20px


  .mobile-contacts
    position absolute
    bottom 60px
    left 40px
    width calc(100% - 80px)
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    font-family "Roboto Regular"
    &__phone .mobile-contacts__tip
      font-size 10px
      margin-bottom 5px
      font-family "Roboto Regular"
      color white
    &__number
      margin-bottom 0
      font-size 14px
      color white
    &__email
      display flex
      color white
      &-link
        font-size 14px
        color white
        text-decoration underline
    &__email .mobile-contacts__tip
      font-size 14px
    &__adress
      padding-left 2px

  .header__contacts
    display none

  .slider
    &__slide
      height 400px
      padding 30px
      align-items flex-start
    &__content
      padding 0
    &__text
      width auto
    &__title
      font-size 24px
    &__discription
      font-size 12px
    &__arrow
      width 0
      height 0
    &__pic
      top 40%
      left 20%

  .catalog
    padding 40px 60px 30px 30px
    &__row
      flex-direction column
      display none
      &_first
        display flex
  .col-xs-12
    width 100%

  .info
    flex-direction column
    padding 30px
    &__title
      font-size 18px
    &__text
      font-size 10px
    &__li
      font-size 10px
  .info__left, .info__right
    width 100%


  .footer
    height auto
    padding 40px 30px 10px
    &__container
      flex-direction column
    &__item
      margin-bottom 30px

  .actions__site-map
    font-size 14px
    margin-right 20px
  .actions__feedback
    font-size 14px !important
