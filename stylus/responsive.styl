@media (max-width: 480px)
  body
    overflow-x hidden
  .redundant-item
    display none

  .catalog__all-item
    width 170px
    height 35px
    margin 0 auto
    display flex
    justify-content center
    align-items center
    font-family "Roboto Regular"
    color #ffffff
    font-size 12px
    border-radius 5px

  .menu
    display none


  .header__logo
    display inline-block
    width 106px
    height 31px

  .burger
    display inline-block
    width 25px
    height 18px
    vertical-align top
    position relative
    z-index 100
    &__line
      background-color: #000000;
      height 2px
      width 25px
      position absolute
      transition 300ms
      &:before, &:after
        transition 300ms
        position absolute
        background-color: #000000;
        content ''
        height 2px
        width 25px

      &:before
        top 7px
      &:after
        top 14px

  .burger_active .burger__line:before
    opacity 0

  .burger_active .burger__line:after
    transform rotate(90deg)
    top 0px

  .burger_active .burger__line
    transform rotate(45deg)
    top 8px
  .authorization
    display none

  .page-container
    width 100%

  .login-and-search
    padding-left 40px

  .header__mobile-menu
    margin 0
    position fixed
    top 0
    left 0
    right 0
    z-index 99
    height 100vh
    width 100vw
    padding-top 30px
    background-image linear-gradient(to bottom, #6db552 0%, #33831f 100%)
  .header__mobile-menu .authorization
    display flex
    flex-direction row
    justify-content space-between
    width 160px
  .header__mobile-menu .menu
    display block
    width 100%
    position absolute
    left 0
    top 0
    padding-top 130px
    &__item
      display block
      width 100%
      background-image none
      height 40px
      position relative
      padding 16px 40px
      font-size 12px
      &::after
        content ''
        position absolute
        bottom 0
        top auto
        left 0
        width 100%
        height 2px
        box-shadow: 0 1px 0 rgba(255, 255, 255, 0.37)
        background-color #3e8e27
        background-image none
      &_first
        &::before
          content ''
          position absolute
          top 0
          left 0
          width 100%
          height 2px
          box-shadow: 0 1px 0 rgba(255, 255, 255, 0.37)
          background-color #3e8e27



  .registration
    color white
    &::after
      border-bottom 1px dotted white


  .search
    width 300px
  .header__container
    display block
    padding 30px
    margin-top 0
  .header__mobile-container
    display flex
    justify-content space-between
    align-items center
    margin-bottom 20px
  .header__menu
    margin-top 20px



  .header__contacts
    display none


  .contacts
    //&__phone
    //  display flex
    //  flex-direction row
    //  justify-content space-between
    //  align-items flex-start
    //  font-family "Roboto Regular"
    &__phone .contacts__tip
      font-size 10px
      color white
    &__number
      font-size 14px
      color white

  .slider__slide
    height 400px
    padding 30px
    align-items flex-start


  .slider__content
    padding 0

  .slider__text
    width auto
  .slider__title
    font-size 24px
  .slider__discription
    font-size 12px

  .slider__arrow
    width 0
    height 0

  .slider__pic
    top 40%
    left 20%

  .catalog__row
    flex-direction column
    display none
    &_first
      display flex
  .col-xs-12
    width 100%
    display flex
    justify-content center

  .info
    flex-direction column
    padding 30px
    &__title
      font-size 18px
    &__text
      font-size 10px
    &__li
      font-size 10px
  .info__left, .info__right
    width 100%


  .footer
    height auto
    padding 40px 30px 10px
    &__container
      flex-direction column
    &__item
      margin-bottom 30px

  .actions__site-map
    font-size 14px
    margin-right 20px
  .actions__feedback
    font-size 14px !important
