@media (max-width: 480px)
  .redundant-item
    display none

  .catalog__all-item
    width 170px
    height 35px
    margin 0 auto
    display flex
    justify-content center
    align-items center
    font-family "Roboto Regular"
    color #ffffff
    font-size 12px
    border-radius 5px

  .menu
    display none


  .header__logo
    display inline-block
    width 106px
    height 31px

  .burger
    display inline-block
    width 25px
    height 18px
    vertical-align top
    position relative
    z-index 100
    &__line
      background-color: #000000;
      height 2px
      width 25px
      position absolute
      transition 300ms
      &:before, &:after
        transition 300ms
        position absolute
        background-color: #000000;
        content ''
        height 2px
        width 25px

      &:before
        top 7px
      &:after
        top 14px

  .burger_active .burger__line:before
    opacity 0

  .burger_active .burger__line:after
    transform rotate(90deg)
    top 0px

  .burger_active .burger__line
    transform rotate(45deg)
    top 8px
  .authorization
    display none

  .page-container
    width 100%

  .header__mobile-menu
    position absolute
    top 0
    left 0
    z-index 99
    height 100vh
    width 100%
    padding 25px 30px 60px
    background-image linear-gradient(to bottom, rgba(89, 173, 62, 1) 0%, rgba(37, 122, 20, 1) 100%)
  .header__mobile-menu .authorization
    display flex
    flex-direction row
    justify-content space-between
    width 160px
  .header__mobile-menu .menu
    display block
    &__item
      display block
      width 100%
      background-image none
      height 40px
      position relative
      &::before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 2px
        box-shadow: 0 1px 0 rgba(255, 255, 255, 0.37);
        background-color: #4ea033;
      &::after
        content none
      &_last
        &::after
          content ''
          position absolute
          bottom 0
          left 0
          width 100%
          height 2px
          box-shadow: 0 1px 0 rgba(255, 255, 255, 0.37);
          background-color: #4ea033;



  .registration
    color white
    &::after
      border-bottom 1px dotted white


  .search
    width 300px
  .header__container
    display block
    padding 30px
    margin-top 0
  .header__mobile-container
    display flex
    justify-content space-between
    align-items center
    margin-bottom 20px
  .header__menu
    margin-top 20px



  .header__contacts
    display none

  .slider__slide
    height 400px
    padding 30px
    align-items flex-start


  .slider__content
    padding 0

  .slider__text
    width auto
  .slider__title
    font-size 24px
  .slider__discription
    font-size 12px

  .slider__arrow
    width 0
    height 0

  .slider__pic
    top 40%
    left 20%

  .catalog__row
    flex-direction column
    display none
    &_first
      display flex
  .col-xs-12
    width 100%
    display flex
    justify-content center

  .info
    flex-direction column
    padding 30px
    &__title
      font-size 18px
    &__text
      font-size 10px
    &__li
      font-size 10px
  .info__left, .info__right
    width 100%


  .footer
    height auto
    padding 40px 30px 10px
    &__container
      flex-direction column
    &__item
      margin-bottom 30px

  .actions__site-map
    font-size 14px
    margin-right 20px
  .actions__feedback
    font-size 14px !important
