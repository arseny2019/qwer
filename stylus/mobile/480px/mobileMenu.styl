@media (max-width: 480px)
  .mobile-menu
    display block
    margin 0
    position fixed
    top 0
    left 0
    right 0
    z-index 99
    height 100vh
    width 100%
    padding-top 30px
    background-image linear-gradient(to bottom, #6db552 0%, #33831f 100%)
    transition 300ms
    &_hidden
      top -100vh
  .mobile-menu .authorization
    display flex
    flex-direction row
    justify-content space-between
    width 160px
  .mobile-menu .menu
    display block
    padding-top 75px
    &__item
      display block
      width 100%
      background-image none
      height 40px
      position relative
      padding 16px 40px
      font-size 12px
      &:hover
        color white
        background-image none
        &::after
          background-color #3e8e27
          opacity 1
          box-shadow 0 1px 0 rgba(255, 255, 255, 0.37)
      &::after
        content ''
        position absolute
        bottom 0
        top auto
        left 0
        width 100%
        height 2px
        box-shadow: 0 1px 0 rgba(255, 255, 255, 0.37)
        background-color #3e8e27
        background-image none
      &_first
        &::before
          content ''
          position absolute
          top 0
          left 0
          width 100%
          height 2px
          box-shadow: 0 1px 0 rgba(255, 255, 255, 0.37)
          background-color #3e8e27

  .mobile__authorization
    display flex
    justify-content flex-start
    align-items center
    margin-bottom 20px
    margin-left 40px

  .mobile__registration
    margin-right 18px
    font-size 12px
    color white
    text-decoration none
    position relative
    &::after
      content ' '
      position absolute
      bottom -2px
      left 3px
      right 3px
      border-bottom 1px dotted white

  .mobile__login
    width 77px
    height 30px
    display flex
    justify-content space-between
    align-items center
    padding 0 8px 0 10px
    border-radius 6px
    background-image none
    background-color white
    &-text
      font-family "Roboto Regular"
      font-size 14px
      line-height 18px
      color #6ab24f;
    &-arrow
      width 19px
      height 16px
      background-repeat no-repeat
      background-size contain
      background-image url("../../res/image/whitearrow.svg")

  .search
    width 100%