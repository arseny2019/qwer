@media (max-width: 480px)
  .burger
    display inline-block
    width 25px
    height 18px
    vertical-align top
    position relative
    z-index 100
    &__line
      background-color: #000000;
      height 2px
      width 25px
      position absolute
      transition 300ms
      &:before, &:after
        transition 300ms
        position absolute
        background-color: #000000;
        content ''
        height 2px
        width 25px

      &:before
        top 7px
      &:after
        top 14px

  .burger_active
    position fixed
    right 30px
    top 35px
  .burger_active .burger__line:before
    opacity 0

  .burger_active .burger__line:after
    transform rotate(90deg)
    background-color white
    top 0px

  .burger_active .burger__line
    background-color white
    transform rotate(45deg)
    top 8px