@require "desktop/avars.styl"
.contacts
  display flex
  flex-direction column
  align-items flex-start
  font-family "Roboto Regular"
  &__phone .contacts__tip
    font-size 12px
    margin-bottom 5px
  &__number
    font-size 24px
    margin-bottom 10px
  &__email
    display flex
    &-link
      font-size 14px
      color #459a2b
      text-decoration underline
  &__email .contacts__tip
    font-size 14px
  &__adress
    padding-left 2px