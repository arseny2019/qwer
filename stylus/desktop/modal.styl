@require "desktop/avars.styl"
.modal
  display none
  position fixed
  top calc(50vh - 130px)
  left calc(50vw - 155px)
  height 260px
  width 310px
  background-color #f3f3f3
  z-index 1000
  padding 50px 50px 30px 30px
  border-radius 10px
  box-shadow 0 6px 7px rgba(0, 0, 0, 0.3)
  &__container
    display flex
    flex-direction column
    align-items center
  &__header
    margin-bottom 20px
    font-size 16px
    font-family "Roboto Regular"
    color: #010101;
  &__input
    height 30px
    margin-bottom 5px
    padding-left 10px
    width 100%
    font-family "Roboto Regular"
    font-size: 12px
    color #000000
    border none
    box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.37);
    background-color: #f4f1eb;
    border-radius: 5px;
    &::placeholder
      opacity 0.9
  &__button
    display flex
    justify-content center
    align-items center
    font-family "Roboto Regular"
    font-size 12px
    color #fefffe
    width 100%
    height 35px
    margin-top 10px
    border-radius 5px
    background-image greenGradient