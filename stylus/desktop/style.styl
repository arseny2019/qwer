@require "desktop/avars.styl"

*
  box-sizing border-box
  padding 0
  margin 0

:focus::-webkit-input-placeholder
  color: transparent
:focus::-moz-placeholder
  color: transparent
:focus:-moz-placeholder
  color: transparent
:focus:-ms-input-placeholder
  color: transparent

a
  text-decoration none
  cursor pointer

.scroll-hidden
  overflow hidden

.darkness
  display none
  width 100vw
  height 100vh
  background-color #000000
  opacity 0.7
  position fixed
  top 0
  left 0
  z-index 999


.button
  cursor pointer
  transition 300ms
  background-image greenGradient
  &:hover
    box-shadow 0 6px 7px rgba(0, 0, 0, 0.2)
  &:active
    box-shadow inset 0 1px 4px rgba(0, 0, 0, 0.37)


.page-block
  width 100%

.page-container
  width 960px
  margin 0 auto
  position relative

.mobile-menu
  display none

.slider-block
  background-image greenGradient
  position relative

.col-md-3
  width 25%




