@import '../../stylus/desktop/avars'
.catalog
  padding 40px 60px 30px 60px
  background-color #f5f1ea
  &__all-item
    display none
  &__row
    display flex
  &__item
    padding 0 5px
    display flex
    min-height 200px
    flex-direction column
    &-pic
      height 140px
      width 200px
      border-radius 5px
      box-shadow inset 0 1px 4px rgba(0, 0, 0, 0.37)
      background-image greenGradient
      position relative
    &-shadow
      position absolute
      top 40%
      left 10%
      width 80%
      height 20%
      border-radius 100%
      box-shadow 10px 0 40px 20px rgba(255, 255, 255, 0.5)
      transform rotate(-25deg)
      transform-origin center
    &-background
      position absolute
      top 10%
      left 10%
      width 80%
      height 80%
      background-size cover
      background-repeat no-repeat
      background-image url("../../res/image/item.png")
    &-title
      display flex
      align-items flex-start
      height 30px
      line-height 15px
      margin-top 10px
      color #459a2b
      font-family "Roboto Regular"
      font-size 14px
      text-decoration underline
      & a
        all inherit
        margin-top 0
        cursor pointer