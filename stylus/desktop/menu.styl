@require "desktop/avars.styl"
.menu
  height 50px
  display flex
  align-items center
  &__item
    display flex
    align-items center
    position relative
    height 100%
    padding 0 20px 0 10px
    background-image greenGradient
    color #ffffff
    font RR14
    text-transform uppercase
    transition 100ms
    &:hover
      background-image linear-gradient(to bottom, #efdcbb 0%, #d5aa6e 100%);
      color #7e653e
    &::after
      content ''
      width 1px
      height 100%
      position absolute
      top 0
      right -1px
      box-shadow: -1px 0 0 rgba(255, 255, 255, 0.37);
      background-color: rgba(194, 194, 194, 0.3);
      background-image: linear-gradient(to top, rgba(0, 0, 0, 0.37) 0%, rgba(0, 0, 0, 0.26) 100%);
    &_first
      padding 0 20px 0 30px
      border-top-left-radius 25px
    &_last
      padding 0 30px 0 10px
      border-top-right-radius 25px
      &::after
        content none

.menu__item:hover
  &::after
    background-color none
    opacity 0
    box-shadow none
.menu__item_last:hover
  &::after
    content ' '
    box-shadow none
    width 20px
    right -10px
    background-color #e6c99b